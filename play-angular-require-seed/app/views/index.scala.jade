extends layout

block body
  header.navbar.navbar-inverse.navbar-fixed-top.basics-nav(data-ng-controller='HeaderCtrl', data-ng-cloak='')
    .container(data-ng-switch='!!user', data-ng-cloak='')
      a.navbar-brand(href='#/') Play-Angular Seed
      div(data-ng-switch-when='true')
        ul.nav.navbar-nav.navbar-right
          li.dropdown
            a.dropdown-toggle(href='', data-toggle='dropdown')
              span.glyphicon.glyphicon-user
              |  {{user.name}}
              b.caret
            ul.dropdown-menu
              li
                a(href='#/settings')
                  span.glyphicon.glyphicon-cog
                  |  Settings
              li
                a(href='', data-ng-click='logout()')
                  span.glyphicon.glyphicon-off
                  |  Logout
      div(data-ng-switch-when='false')
        ul.nav.navbar-nav.pull-right
          li
            a(href='#/login') Login
  // Main Content
  .container(data-ng-cloak='')
    h2 To ensure that material-design theme is working, check out the buttons below.
    h3.text-muted If you can see the ripple effect on clicking them, then you are good to go!
    p.bs-component
    a.btn.btn-default(href='javascript:void(0)') Default
    a.btn.btn-primary(href='javascript:void(0)') Primary
    a.btn.btn-success(href='javascript:void(0)') Success
    a.btn.btn-info(href='javascript:void(0)') Info
    a.btn.btn-warning(href='javascript:void(0)') Warning
    a.btn.btn-danger(href='javascript:void(0)') Danger
    a.btn.btn-link(href='javascript:void(0)') Link
    // Home
    div(data-ng-view='')

  footer(data-ng-controller='FooterCtrl')
